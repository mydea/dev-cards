{
  "name": "@dev-cards/api",
  "version": "1.0.0",
  "description": "Cloudflare Worker API for Draw It, Play It, Ship It leaderboard",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "wrangler deploy --dry-run --env=production",
    "dev": "wrangler dev --env=development",
    "deploy": "wrangler deploy",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "db:migrate": "wrangler d1 migrations apply dev-cards-db",
    "db:migrate:prod": "wrangler d1 migrations apply dev-cards-db --remote",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@dev-cards/data": "workspace:*",
    "@hono/zod-validator": "^0.2.0",
    "hono": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "wrangler": "^4.31.0"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
