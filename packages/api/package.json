{
  "name": "@dev-cards/api",
  "version": "1.0.0",
  "description": "Cloudflare Worker API for dev-cards leaderboard",
  "main": "src/index.ts",
  "scripts": {
    "build": "wrangler build",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "db:migrate": "wrangler d1 migrations apply dev-cards-db",
    "db:migrate:prod": "wrangler d1 migrations apply dev-cards-db --remote",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@dev-cards/data": "workspace:*",
    "hono": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240620.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.60.0"
  }
}
